<?xml version="1.0" encoding="UTF-8"?>

<openbox_config xmlns="http://openbox.org/3.4/rc"
                xmlns:xi="http://www.w3.org/2001/XInclude">

<placement>
  <policy>Smart</policy>
  <center>no</center>
  <monitor>Any</monitor>
  <primaryMonitor>1</primaryMonitor>
</placement>

<desktops>
  <number>1</number>
  <firstdesk>1</firstdesk>
  <names>
    <name>desktop1</name>
  </names>
  <popupTime>0</popupTime>
</desktops>

<keyboard>
</keyboard>

<applications>

  <application class="Chromium*">
    <desktop>1</desktop>
    <focus>yes</focus>
    <fullscreen>yes</fullscreen>
    <layer>below</layer>
  </application>
  
</applications>

</openbox_config>
